{{! banner }}
<div>
  <div class="banner-overlay index-banner-overlay"></div>
  <div class="index-banner">
    <div
      class="p-4 d-flex flex-column justify-content-center align-items-center h-75 index-header-content"
    >
      {{! header content }}
      <div
        class="d-flex justify-content-center flex-column align-items-center banner-header"
      >

        <h1 class="text-white col-8">
          Unleash Your Gaming Potential.
          <br />
          Play, Compete, Conquer!
        </h1>
        <p class="text-white-50 col-6 mt-4">
          Ready for the ultimate gaming showdown? Join TourneyHub, the hub of
          epic tournaments and friendly competition. Sign up now and elevate
          your gaming to new heights. Don't wait, start your journey to victory
          today!
        </p>

      </div>

      {{! scroll of ongoing tournaments }}
      <div class="index-ongoing-tournaments w-100 h-min ">

        {{! tournament card }}
        <div class="d-flex overflow-scroll gap-3">
          {{#unless ongoingTournaments}}
            {{#each ongoingTournaments}}
                {{> tournamentCard this}}
            {{/each}}
          {{/unless}}
        </div>
      </div>
    </div>
  </div>
</div>

{{! tournaments }}
<div class="p-5">
  <h4 class="text-info">TOURNAMENTS</h4>
  
  <div class="d-flex flex-wrap gap-3 mt-2">
    {{#each upcomingTournaments}}
      {{> tournamentCard this}}
    {{/each}}
  </div>


  <div class="d-flex justify-content-center mt-3">
    <a href="/tournaments" class="text-center bg-info text-black text-decoration-none px-4 py-2">View All Tournament</a>
  </div>
</div>


<div class="p-5">
  
</div>

